<html>

<head>
	<link rel="stylesheet" href="./css/style.css">
	<link rel="stylesheet" href="/css/registration.css">
</head>

<body>
	{{!-- <div id="app_header">
		Pariksha-NITC
	</div> --}}
	
	{{!-- Nav Bar --}}
	<nav class="nav-bar">
        <div class="title">
            <h3>Pariksha-NITC</h3>
        </div>
        <div class="nav-links-container">
            <a href="/" class="nav-link">Home</a>
            <a href="/login" class="nav-link">Login</a>
        </div>
        <div class="burger">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
        </div>
    </nav>

	<script>
        {{#if taken}}
        alert(`UserID already taken. Try again.`);
        {{/if }}
    </script>
	<div style="letter-spacing:2px;margin-top:2%;font-size:18px;padding-left:30%;margin-bottom:0%;margin-left:1%">
		Registration Form</div>
	<div id="form">
		<form action="/register" method="post" id="user_form">
			<div class="row">
				<div class="label">UserID:</div>
				<div class="input"><input type="text" id="uid" name="uid" placeholder="Enter a UserID" required="true"></div><br><br>
			</div>
			<div class="row">
				<div class="label">Name:</div>
				<div class="input"><input type="text" id="name" name="name" placeholder="Enter your name" required></div><br><br>
			</div>
			<div class="row">
				<div class="label">Password:</div>
				<div class="input" id="pwdp"><input type="password" id="pwd" name="pwd" placeholder="Create your password" required></div><br><br>
			</div>
			<div class="row">
				<div class="label">Confirm Password:</div>
				<div class="input" id="cpwdp"><input type="password" id="cpwd" placeholder="Re-enter your password" required></div><br><br>
			</div>
			<div style="padding-left:35%;padding-top:0%;">
				<select name="role" style="border-radius:5px;">
					<option value="student">Student</option>
					<option value="teacher">Teacher</option>
					<option value="ta">TA</option>
				</select>
				
			</div>
		</form>
		<button style="border-radius:20px;cursor:pointer;margin-left:35%;" onclick="validate();">Submit</button>
	</div>
	<script src="/js/registration.js"></script>
</body>