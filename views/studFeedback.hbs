<script>
	function appendQnNo(node)
	{
		//onsubmit="appendQnNo(this)"
		let cn = node.firstChild;
		let qnum = cn.innerHTML;
		let action = node.getAttribute('action');
		let qnlink = (action + qnum);
		node.setAttribute('action',qnlink);
		node.submit();
		
	}
