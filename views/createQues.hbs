    </div>
    <div id="right_panel">
        <div style="background-color:#e8c6ff;;text-align:center;">Questions Palette</div>
        <div id="questions_panel">{{#each questions}}<button class="qn_button"
                onclick="addToForm(this)">{{#inc}}{{@index}}{{/inc}}</button><input type="hidden" name="qnid"
                value="{{qnid}}">{{/each}}</div>
    </div>
    <div id="main_area">
        <form id="questionForm" action="/teacher/createQues" method="post">
            <div id="details">
                {{quizname}}
                
                <div id="questionType" style="margin-top:1%">
                    Select one of the following Types :
                    <select name="qtypes" style="border-radius:5px;" onchange="caterType(this)">
                        {{#ife qexistence 'true' }}
                            {{#ife type 'mcq'}}
                                <option value="mcq" selected>Single Correct Choice Type</option>
                            {{else}}
                                <option value="mcq">Single Correct Choice Type</option>
                            {{/ife}}
                            {{#ife type 'msq'}}
                                <option value="msq" selected>Multi Correct Choice Type</option>
                            {{else}}
                                <option value="msq">Multi Correct Choice Type</option>
                            {{/ife}}
                            {{#ife type 'subjective'}}
                                <option value="subjective" selected>Subjective Type</option>
                            {{else}}
                                <option value="subjective">Subjective Type</option>
                            {{/ife}}
                            {{#ife type 'integer'}}
                                <option value="integer" selected>Integer Type</option>
                            {{else}}
                                <option value="integer" >Integer Type</option>
                            {{/ife}}
                        {{else}}
                            <option value="mcq">Single Correct Choice Type</option>
                            <option value="msq">Multi Correct Choice Type</option>
                            <option value="subjective">Subjective Type</option>
                            <option value="integer">Integer Type</option>
                        {{/ife}}
                    </select>
                </div>
            </div>

            <div id="holds">
                {{#ife qexistence 'true'}}
                    <div id="qstn"> Question <textarea name="question" cols="100" rows="4" id="question" placeholder="Type in Question ...">{{question}}</textarea>
                    </div>
                    {{#ife type 'mcq'}}
                            <div id="options">
                            <div id="optionsSoFar">
                                <p> Choose one of these options : </p><br>
                                {{#each options}}
                                    <script>
                                        options.push('{{.}}');
                                    </script>
                                    <p><input type="radio" class="optionID" name="option" {{#if ../answers}}{{#ife @index ../answers}}checked{{/ife}}{{/if}}>{{.}}</p>
                                {{/each}}
                            </div>
                            <textarea name="option" cols="100" rows="2" id="optionArea" placeholder="Type in Option ..."></textarea>
                            <button style="border-radius:5px;width:max-content;height: fit-content;" type="button"
                                onclick="createOption('single')">Create Option</button>
                        </div>    
                    {{/ife}}
                    {{#ife type 'msq'}}
                            <div id="options">
                            <div id="optionsSoFar">
                                <p> Choose options : </p><br>
                                {{#each options}}
                                    <script>
                                        options.push('{{.}}');
                                    </script>
                                    <p><input type="checkbox" class="optionID" name="option" {{#if ../answers}}{{#in @index ../answers}}checked{{/in}}{{/if}}>{{.}}</p>
                                {{/each}}
                            </div>
                            <textarea name="option" cols="100" rows="2" id="optionArea" placeholder="Type in Option ..."></textarea>
                            <button style="border-radius:5px;width:max-content;height: fit-content;" type="button"
                                onclick="createOption('multi')">Create Option</button>
                        </div>    
                    {{/ife}}
                    {{#ife type 'integer'}}
                            <div id="limits">
                                <p>Answer Range: <input name="fromprecision" type="text" value="{{fromprecision}}"> to <input name="toprecision" type="text" value="{{toprecision}}"> </p>
                                <p>Duration : <input name="duration" type="text" value="{{duration}}"> minutes </p>
                                <p>Marks : <input name="marks1" type="text" value="{{marks}}"> marks </p>
                                <p>Feedback :</p> 
                                <p><textarea name="feedback" cols="100" rows="1" id="feedback" placeholder="Feedback ...">{{feedback}}</textarea></p>
                            </div>   
                    {{else}}
                        <div id="limits">
                            <p>Duration : <input name="duration" type="text" value="{{duration}}"> minutes </p>
                            <p>Marks : <input name="marks1" type="text" value="{{marks}}"> marks </p>
                            <p>Feedback :</p> 
                            <p><textarea name="feedback" cols="100" rows="1" id="feedback" placeholder="Feedback ...">{{feedback}}</textarea></p>
                        </div>
                    {{/ife}}
                {{else}}
                    <div id="qstn"> Question <textarea name="question" cols="100" rows="4" id="question" placeholder="Type in Question ..."></textarea>
                    </div>
                    <div id="options">
                        <div id="optionsSoFar"></div>
                        <textarea name="option" cols="100" rows="2" id="optionArea" placeholder="Type in Option ..."></textarea>
                        <button style="border-radius:5px;width:max-content;height: fit-content;" type="button"
                            onclick="createOption('single')">Create Option</button>
                    </div>

                    <div id="limits">
                        <p>Duration : <input name="duration" type="text"> minutes </p>
                        <p>Marks : <input name="marks1" type="text"> marks </p>
                        <p>Feedback :</p>
                        <p><textarea name="feedback" cols="100" rows="1" id="feedback" placeholder="Feedback..."></textarea></p>
                    </div>
                {{/ife}}
            </div>
            <div id="action_area">
                <input type="hidden" name="qnid" value="{{qnid}}">
                <button class = "action_items" type="button" id="save">Save</button>
			    <button class = "action_items" type="button" id="create">Create Question</button>
			    <button class = "action_items" type="button" id="delete">Delete Question</button>	
            </div>
        </form>
    </div>
    <form id="submitForm" action="/teacher/queryQuestions" method="POST">
        <input type="hidden" name="qzid" value="{{qzid}}">
    </form>
    <form id="createForm" action="/teacher/createPage" method="POST">
        <input type="hidden" name="qzid" value="{{qzid}}">
    </form>
    <form id="deleteForm" action="/teacher/deleteQUestion" method="POST">
        <input type="hidden" name="qzid" value="{{qzid}}">
        <input type="hidden" name="qnid" value="{{qnid}}">
    </form>
    <script>
        toggleEvalPanel();
        function addToForm(node) {
            let qform = document.getElementById("submitForm");
            //alert(qform);
            let navinp = node.nextSibling;
            //navinp.setAttribute("value",node.innerHTML);
            qform.appendChild(node.nextSibling);

            //alert(qform.lastChild.getAttribute("type"));
            qform.submit();
        }
